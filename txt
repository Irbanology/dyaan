<script>
  // Add background icons
  const bg = document.getElementById('bgElements');
  const icons = ['‚ú®', 'üéà', 'üéÇ', 'üíñ', '‚≠ê'];
  for(let i=0; i<15; i++) {
    let span = document.createElement('span');
    span.className = 'bg-icon';
    span.innerText = icons[Math.floor(Math.random()*icons.length)];
    span.style.left = Math.random() * 100 + 'vw';
    span.style.animationDuration = (Math.random() * 5 + 5) + 's';
    span.style.animationDelay = (Math.random() * 5) + 's';
    span.style.fontSize = (Math.random() * 20 + 10) + 'px';
    bg.appendChild(span);
  }

  const HER_NAMES=['dyaan'];

  const messages={
    dum:[
      'Happy Birthday, Dyaan.',
      'This is the "Dum Biryani" wish‚Äîslow-cooked and soulful.',
      'Just like the best things in life, you have a depth that most people only scratch the surface of.',
      'Thank you for being someone who values time and patience.',
      'May your year be as rich and fulfilling as the heart you put into everything.',
      'Stay authentic. Stay you.',
      '‚Äî with love and patience.'
    ],
    spicy:[
      'Happy Birthday, Dyaan!',
      'This one is the "Spicy" wish‚Äîfor your fire and spark.',
      'The world can be a bit bland, but you bring the flavor.',
      'Don‚Äôt ever let anyone dull your spice or tell you you‚Äôre "too much."',
      'You are exactly the right amount of chaos and energy.',
      'Keep shining, keep fighting, keep being bold.',
      '‚Äî to a powerful year ahead.'
    ],
    royal:[
      'To the Royal Dyaan,',
      'This is the "Shahi" wish‚Äîbecause you deserve the finest.',
      'Sometimes we forget that we are allowed to be pampered without a reason.',
      'On your birthday, I hope you realize how much space you take up in people‚Äôs hearts.',
      'You don‚Äôt have to do anything to be worthy of love.',
      'You just have to exist.',
      '‚Äî with the utmost respect and warmth.'
    ]
  };

  function checkName(){
    const v=document.getElementById('nameInput').value.trim().toLowerCase();
    if(HER_NAMES.includes(v)) {
        confetti({ particleCount: 150, spread: 70, origin: { y: 0.6 }, colors: ['#cfa3b6', '#ffffff'] });
        go(2);
    } else {
        document.getElementById('hint').innerText='That is not the name I am looking for.';
    }
  }

  function go(n){
    document.querySelectorAll('.screen').forEach(s=>s.classList.remove('active'));
    document.getElementById('screen'+n).classList.add('active');
  }

  function openGift(type){
    confetti({ particleCount: 100, spread: 60, origin: { y: 0.8 } });
    const box=document.getElementById('letter');
    box.innerHTML='';
    messages[type].forEach((t, i)=>{
      const p=document.createElement('p');
      p.className='line';
      p.style.animationDelay = (i * 0.3) + 's';
      p.innerText=t;
      box.appendChild(p);
    });
    go(4);
  }
</script>

